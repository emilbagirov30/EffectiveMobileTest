<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
android:paddingBottom="15dp"
    android:background="@color/background_app">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/tickets_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfpro"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="6 990 Р">
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_tickets_circle"
                        android:layout_gravity="center">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_departure_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/sfpro"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:text="03:15">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_departure_airport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/sfpro"
                            android:textStyle="italic"
                            android:textColor="@color/text"
                            android:text="VKO">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/sfpro"
                        android:textColor="@color/text"
                        android:text="-">
                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_arrival_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/sfpro"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:text="07:10">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_arrival_airpor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/sfpro"
                            android:textStyle="italic"
                            android:textColor="@color/text"
                            android:text="AER">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_way_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/white"
                        android:text="4ч в пути">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_has_transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro"
                        android:textColor="@color/white"
                        android:text=" / без пересадок">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/badge">

            <TextView
                android:id="@+id/tv_badge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:fontFamily="@font/sfpro"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:text="Самый удобный">
            </TextView>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>
