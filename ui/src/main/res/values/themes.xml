<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EffectiveMobileTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/price_color</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonStyle">@style/RoundedButton</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/background_app</item>
        <item name="colorPrimaryDark">@color/background_app</item>
    </style>


    <style name="TextPanel">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/sfpro</item>

    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>
    <style name="RoundedButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sfpro</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>